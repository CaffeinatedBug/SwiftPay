# SwiftPay Contracts - Environment Variables
# Copy this file to .env and fill in your values

# Deployer wallet private key (WITHOUT 0x prefix for some tools, WITH 0x for others)
DEPLOYER_PRIVATE_KEY=0x_your_private_key_here

# RPC URLs
SEPOLIA_RPC_URL=https://rpc.sepolia.org
ARBITRUM_SEPOLIA_RPC_URL=https://sepolia-rollup.arbitrum.io/rpc

# Block explorer API keys for verification
ETHERSCAN_API_KEY=your_etherscan_api_key
ARBISCAN_API_KEY=your_arbiscan_api_key

# Hub address (the address that can authorize settlements)
HUB_ADDRESS=0x_your_hub_wallet_address

# USDC token addresses on testnets
USDC_SEPOLIA=0x1c7D4B196Cb0C7B01d743Fbc6116a902379C7238
USDC_ARBITRUM_SEPOLIA=0x75faf114eafb1BDbe2F0316DF893fd58CE46AA4d
